page{
	--bgcolor:#c7e9c7;
	--shadowcolor:#97c597;
	--margin-left-color:#c1e092;
	--margin-right-color:#a8dba8;
}
.Max{
	color: #3b8686;
}
.Max .background-image{
	height: 100%;
	width: 100%;
	position: fixed;
}
.background{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100%;
	width: 100%;
	position: absolute;
}

.loginbox{
	border-radius: 30rpx;
	height: 700rpx;
	width: 85%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	background-color:var(--bgcolor);
	box-shadow: 0 0 30rpx var(--shadowcolor);
	background-image: linear-gradient(70deg, var(--margin-left-color) 10%,var(--margin-right-color) 100%);
}
.avatar{
	height: 200rpx;
	width: 200rpx;
}
.avatar button{
	width: 200rpx;
	height: 200rpx;
	background-color: var(--bgcolor);
	border-radius: 50%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	background-image: linear-gradient(70deg, var(--margin-right-color) 0%,var(--margin-left-color) 100%);
}
.avatar-image{
	border-radius: 50%;
	height: 100rpx;
	width: 100rpx;
}
.info{
	width: 100%;
	height: 400rpx;
	display: flex;
	flex-direction: column;
	justify-content:space-between;
	align-items: center;
}
.item{
	height: 90rpx;
	width: 90%;
	border-radius: 30rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}
.item text{
	width: 100rpx;
}
.item .inputbox{
	border-radius: 30rpx;
	border: 10rpx solid #C6E7CE;
	width: 300rpx;
	height: 50rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.item .inputbox input{
	width: 250rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.item .inputbox text{
	width: 250rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.loginbutton button{
	margin: 50rpx;
	width: 300rpx;
	height: 75rpx;
	border-radius: 30rpx;
	color: #3b8686;
	background-image: linear-gradient(70deg, var(--margin-left-color) 0%,var(--margin-right-color) 100%);
}
